<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_style"
    android:orientation="vertical"
    tools:context=".contentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:fontFamily="@font/audiowide"
                android:text="B. V. Raju Institute of Technology"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/audiowide"
                android:layout_marginTop="10dp"
                android:text="Subject:-Object Oriented Programming Through Java"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="10dp"
                android:layout_marginTop="30sp"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_gravity="center_horizontal|center_vertical">

                <Button
                    android:id="@+id/btnUnit1"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/audiowide"
                    android:text="unit 1"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUnit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/audiowide"
                    android:text="unit 2"
                    android:textSize="30sp"
                    style="?android:borderlessButtonStyle"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUnit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/audiowide"
                    android:text="unit 3"
                    android:textSize="30sp"
                    style="?android:borderlessButtonStyle"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUnit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/audiowide"
                    android:text="unit 4"
                    android:textSize="30sp"
                    style="?android:borderlessButtonStyle"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUnit5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/audiowide"
                    android:text="unit 5"
                    android:textSize="30sp"
                    style="?android:borderlessButtonStyle"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUnit6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:background="@drawable/custom_button"
                    android:fontFamily="@font/audiowide"
                    android:text="unit 6"
                    android:textSize="30sp"
                    style="?android:borderlessButtonStyle"
                    android:textStyle="bold" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>