<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".unit4_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/content_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/Button5"
            style="?android:actionBarStyle"
            android:layout_width="211dp"
            android:layout_height="147dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/topic_style"
            android:fontFamily="@font/galindo"
            android:text="Multithreading"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="22sp" />

        <TextView
        android:id="@+id/textView27"
        android:layout_width="126dp"
        android:layout_height="26dp" android:textColor="@color/colorBlack"
        android:text="Topics:-"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="329dp"
        android:layout_height="163dp"
        android:textColor="@color/colorBlack"
        android:text="@string/list8"
        android:layout_gravity="end" />

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/quiz_button"
            android:text="Quiz"
            android:fontFamily="@font/galindo"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" />


        <Button
            android:id="@+id/Button6"
            style="?android:actionBarStyle"
            android:layout_marginTop="10sp"
            android:layout_width="211dp"
            android:layout_height="147dp"
            android:background="@drawable/topic_style"
            android:fontFamily="@font/galindo"
            android:text="Java Collection Framework"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="22sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:textColor="@color/colorBlack"
        android:text="Topics:-"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="329dp"
            android:layout_height="123dp"
            android:layout_gravity="end"
            android:textColor="@color/colorBlack"
            android:text="@string/list9" />

        <Button
            android:id="@+id/btnQuiz1"
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/quiz_button"
            android:text="Quiz"
            android:fontFamily="@font/galindo"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>