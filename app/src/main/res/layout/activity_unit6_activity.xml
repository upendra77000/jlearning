<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".unit6_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/content_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/Button9"
            style="?android:actionBarStyle"
            android:layout_width="211dp"
            android:layout_height="147dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/topic_style"
            android:fontFamily="@font/galindo"
            android:text="Abstract Window Toolkit"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="22sp" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:text="Topics:-"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="333dp"
            android:layout_height="160dp"
            android:layout_gravity="end"
            android:textColor="@color/colorBlack"
            android:text="@string/list12" />

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/quiz_button"
            android:text="Quiz"
            android:fontFamily="@font/galindo"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="103dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:text="Swings"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button10"
            style="?android:actionBarStyle"
            android:layout_width="211dp"
            android:layout_height="147dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/topic_style"
            android:fontFamily="@font/galindo"
            android:text="Swings"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="22sp" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:textColor="@color/colorBlack"
        android:text="Topics:-"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="333dp"
            android:layout_height="171dp"
            android:layout_gravity="end"
            android:textColor="@color/colorBlack"
            android:text="@string/list13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView42"
            app:layout_constraintVertical_bias="0.057" />

        <Button
            android:id="@+id/btnQuiz1"
            android:layout_width="148dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/quiz_button"
            android:text="Quiz"
            android:fontFamily="@font/galindo"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" />
    </LinearLayout>

    </ScrollView>
</RelativeLayout>